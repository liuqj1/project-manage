<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.science.mapper.RoleMapper">

    <resultMap id="detailRole" type="com.example.science.entity.Role">
        <id column="roleid" property="roleid" />
        <id column="pid" property="pid"/>
    </resultMap>

    <insert id="addRole" parameterType="java.lang.Integer">
        insert into ums_role_permission_relation(roleid,pid)
        values (#{roleid},#{pid})
    </insert>

    <delete id="deleteRole" parameterType="java.lang.Integer">
        delete
        from ums_role_permission_relation
        where roleid=#{roleid} and pid=#{pid}
    </delete>

    <select id="checkRole" parameterType="java.lang.Integer">
        select *
        from ums_role_permission_relation
        where roleid=#{roleid} and pid=#{pid}
    </select>
</mapper>
